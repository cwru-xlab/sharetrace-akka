<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration debug="true">
  <timestamp key="bySecond" datePattern="yyyy-MM-dd_HH-mm-ss"/>
  <property name="log.dir" value="logs/${bySecond}"/>
  <property name="graphs.log.dir" value="${log.dir}/graphs" scope="context"/>

  <appender
    class="net.logstash.logback.appender.LoggingEventAsyncDisruptorAppender"
    name="ConsoleAppender">
    <appendRetryFrequency>5</appendRetryFrequency>
    <appendTimeout>-1</appendTimeout>

    <appender class="ch.qos.logback.core.ConsoleAppender">
      <encoder class="net.logstash.logback.encoder.LogstashEncoder">
        <fieldNames class="net.logstash.logback.fieldnames.ShortenedFieldNames">
          <levelValue>[ignore]</levelValue>
          <logger>[ignore]</logger>
          <thread>[ignore]</thread>
          <timestamp>[ignore]</timestamp>
          <version>[ignore]</version>
        </fieldNames>
        <includeContext>false</includeContext>
        <includeMdcKeyName>sid</includeMdcKeyName>
      </encoder>
    </appender>

    <ringBufferSize>8192</ringBufferSize>
    <waitStrategyType>blocking</waitStrategyType>
  </appender>

  <appender
    class="net.logstash.logback.appender.LoggingEventAsyncDisruptorAppender"
    name="EventsAppender">
    <appendRetryFrequency>5</appendRetryFrequency>
    <appendTimeout>-1</appendTimeout>

    <appender class="ch.qos.logback.core.rolling.RollingFileAppender">
      <encoder class="net.logstash.logback.encoder.LogstashEncoder">
        <fieldNames class="net.logstash.logback.fieldnames.ShortenedFieldNames">
          <levelValue>[ignore]</levelValue>
          <logger>[ignore]</logger>
          <thread>[ignore]</thread>
          <timestamp>[ignore]</timestamp>
          <version>[ignore]</version>
        </fieldNames>
        <includeContext>false</includeContext>
        <includeMdcKeyName>sid</includeMdcKeyName>
      </encoder>
      <immediateFlush>false</immediateFlush>
      <rollingPolicy
        class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
        <fileNamePattern>${log.dir}/events/%d-%i.log.zip
        </fileNamePattern>
        <maxFileSize>1GB</maxFileSize>
        <maxHistory>30</maxHistory>
        <totalSizeCap>20GB</totalSizeCap>
      </rollingPolicy>
    </appender>

    <ringBufferSize>8192</ringBufferSize>
    <waitStrategyType>blocking</waitStrategyType>
  </appender>

  <appender
    class="net.logstash.logback.appender.LoggingEventAsyncDisruptorAppender"
    name="MetricsAppender">
    <appendRetryFrequency>5</appendRetryFrequency>
    <appendTimeout>-1</appendTimeout>

    <appender class="ch.qos.logback.core.FileAppender">
      <append>true</append>
      <encoder class="net.logstash.logback.encoder.LogstashEncoder">
        <fieldNames class="net.logstash.logback.fieldnames.ShortenedFieldNames">
          <levelValue>[ignore]</levelValue>
          <logger>[ignore]</logger>
          <thread>[ignore]</thread>
          <timestamp>[ignore]</timestamp>
          <version>[ignore]</version>
        </fieldNames>
        <includeContext>false</includeContext>
        <includeMdcKeyName>sid</includeMdcKeyName>
      </encoder>
      <file>${log.dir}/metrics.log</file>
      <immediateFlush>false</immediateFlush>
    </appender>

    <ringBufferSize>8192</ringBufferSize>
    <waitStrategyType>blocking</waitStrategyType>
  </appender>

  <appender
    class="net.logstash.logback.appender.LoggingEventAsyncDisruptorAppender"
    name="SettingsAppender">
    <appendRetryFrequency>5</appendRetryFrequency>
    <appendTimeout>-1</appendTimeout>

    <appender class="ch.qos.logback.core.FileAppender">
      <append>true</append>
      <encoder class="net.logstash.logback.encoder.LogstashEncoder">
        <fieldNames class="net.logstash.logback.fieldnames.ShortenedFieldNames">
          <levelValue>[ignore]</levelValue>
          <logger>[ignore]</logger>
          <thread>[ignore]</thread>
          <timestamp>[ignore]</timestamp>
          <version>[ignore]</version>
        </fieldNames>
        <includeContext>false</includeContext>
        <includeMdcKeyName>sid</includeMdcKeyName>
      </encoder>
      <file>${log.dir}/settings.log</file>
      <immediateFlush>false</immediateFlush>
    </appender>

    <ringBufferSize>8192</ringBufferSize>
    <waitStrategyType>blocking</waitStrategyType>
  </appender>
  <root level="debug">
    <appender-ref ref="ConsoleAppender"/>
  </root>
  <logger name="EventsLogger" level="info" additivity="false">
    <appender-ref ref="EventsAppender"/>
  </logger>
  <logger name="MetricsLogger" level="info" additivity="false">
    <appender-ref ref="MetricsAppender"/>
  </logger>
  <logger name="SettingsLogger" level="info" additivity="false">
    <appender-ref ref="SettingsAppender"/>
  </logger>
</configuration>
